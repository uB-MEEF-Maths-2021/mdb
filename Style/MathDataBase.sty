\begin{luacode}
MDB = {
  lfs = require('lfs'),
}
function MDB.directory(file_name)
  local p = MDB.lfs.currentdir() .. package.config:sub(1,1) .. file_name
  local result
  while true do
    local i, j, a
    i, j, a, p = string.find(p, '^([^/\\]*)[/\\]+(.*)$')
    if a then
      result = a
    else
      break
    end
  end
  tex.print(-2, result)
end
\end{luacode}

